cat > .gitignore << 'EOF'
# Node.js dependencies
node_modules/
__pycache__/
*.pyc
*.pyo
*.pyd

# Build output
/build
/dist

# Environment files
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Upload files
uploads/
*.xlsx
*.xls

# Log files
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# IDE files
.vscode/
.idea/
*.swp
*.swo

# Operating System files
.DS_Store
Thumbs.db

# Python virtual environments
venv/
env/
.venv/

# Jupyter Notebook
.ipynb_checkpoints
EOF